{
  "rules": {
    ".read": true,
    ".write": true,
    "admin_credentials": {
      ".read": true,
      ".write": false,
      "$adminId": {
        ".read": true
      }
    },
    "students": {
      ".read": true,
      ".write": true,
      "$studentId": {
        ".read": true,
        ".write": true
      }
    },
    "rooms": {
      ".indexOn": ["status", "type", "floor", "occupied"],
      "$roomId": {
        ".validate": "newData.hasChildren(['id', 'number', 'type', 'floor', 'capacity', 'occupied', 'status'])"
      }
    },
    "snackcart": {
      ".read": true,
      ".write": true,
      "items": {
        ".indexOn": ["category", "price", "available"],
        "$itemId": {
          ".validate": "newData.hasChildren(['name', 'price', 'category', 'available'])"
        }
      }
    },
    "mess": {
      ".read": true,
      ".write": true,
      "meals": {
        ".indexOn": ["date", "type", "available"],
        "$mealId": {
          ".validate": "newData.hasChildren(['name', 'type', 'date', 'available'])"
        }
      }
    },
    "maintenance": {
      ".read": true,
      ".write": true,
      "requests": {
        ".indexOn": ["status", "priority", "timestamp"],
        "$requestId": {
          ".validate": "newData.hasChildren(['description', 'status', 'priority', 'timestamp'])"
        }
      }
    }
  }
}
